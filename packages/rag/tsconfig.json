{
    "extends": "@schologic/config/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    },
    "include": [
        "src/**/*"
    ]
}